{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,

    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["esnext"],

    "module": "esnext",
    "moduleResolution": "bundler",

    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "android",
    "ios"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "App.tsx",
    "src/types/react-native-vector-icons.d.ts"
  ]
}
